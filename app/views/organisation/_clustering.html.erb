<div class='row no-margins'>
  <div class='col-md-8 col-md-offset-2 margin-top-50'>

    <div class='clustering-country'>
      <h3>Linked Organisations by Country</h3>
      <table class='table table-striped'>
        <thead>
          <th>Country or Domain</th>
          <th>Number of Organisations</th>
        </thead>
        <tbody>
          <% @presenter.country_table.each do |row| %>
            <tr>
              <td>
                <a href="/collection_tagging?country=<%= Rails.env.test? ? row[0].gsub(/ /, '%20') : row[0] %>">
                  <%= row[0] %>
                </a>
              </td>
              <td>
                <%= row[1] %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class='clustering-city'>
      <hr>
      <h3 class='margin-top-50'>Linked Organisations by City</h3>
      <table class='table table-striped'>
        <thead>
          <th>City</th>
          <th>Number of Organisations</th>
        </thead>
        <tbody>
          <% @presenter.city_table.each do |row| %>
            <tr>
              <td>
                <a href="/collection_tagging?city=<%= Rails.env.test? ? row[0].gsub(/ /, '%20') : row[0] %>">
                  <%= row[0] %>
                </a>
              </td>
              <td>
                <%= row[1] %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class='clustering-sector'>
      <hr>
      <h3 class='margin-top-50'>Linked Organisations by Sector</h3>
      <table class='table table-striped'>
        <thead>
          <th>Sector</th>
          <th>Number of Organisations</th>
        </thead>
        <tbody>
          <% @presenter.sector_table.each do |row| %>
            <tr>
              <td>
                <a href="/collection_tagging?sector=<%= row[0] %>">
                  <%= row[1] %>
                </a>
              </td>
              <td>
                <%= row[2] %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>