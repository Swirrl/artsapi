<%= form_tag('/people/update', method: :post, class: 'form-inline person-update-form', remote: true) do %>
  <div class="form-group">

    <%= hidden_field_tag :uri, person.uri %>

    <p class='padding-left-5 mid-grey'>
      <strong>Email: <%= person.mbox.downcase %></strong>
    </p>

    <div class="input-group">
      <div class="input-group-addon">Label</div>
      <%= text_field_tag :label, person.label, class: 'form-control', placeholder: 'Enter a name...' %>
    </div>

    <div class="input-group">
      <div class="input-group-addon">Position</div>
      <%= text_field_tag :position, person.position, class: 'form-control', placeholder: 'Enter a role...' %>
    </div>

    <div class="btn-group" role="group">
      <%= link_to 'View', Presenters::Resource.create_path_from_uri(person.uri), target: :blank, class: 'btn btn-default' %>
      <%= submit_tag 'Update resource', class: 'btn btn-success', data: { disable_with: "Updating..." } %>
    </div>

  </div>
<% end %>
